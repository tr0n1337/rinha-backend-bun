{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2021",
    "module": "ES2022",
    "moduleDetection": "force",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "types": ["bun-types"]
}
